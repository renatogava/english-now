@using EnglishNow.Web.Models.Menu
@using EnglishNow.Web.Models.Professor
@model IList<ListarViewModel>;
@{
    ViewData["Title"] = "Listar Professores";
    ViewData["Menu"] = Menu.Professor;
}

<h1>Lista de Professores</h1>

<div class="py-2">
    <a class="btn btn-primary" asp-controller="Professor" asp-action="Criar">Novo</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Login</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var professor in Model)
            {
                <tr>
                    <th>@professor.Id</th>
                    <td>@professor.Nome</td>
                    <td>@professor.Email</td>
                    <td>@professor.Login</td>
                    <td><a class="link-underline link-underline-opacity-0" asp-controller="Professor" asp-action="Editar" asp-route-id="@professor.Id">Editar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
